---
apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
   name: rook-ceph-block
provisioner: "{{ rook_k8s_namespace }}.rbd.csi.ceph.com"
parameters:
    clusterID: {{ rook_k8s_namespace }}
    pool: block-replicapool
    imageFormat: "2"
    imageFeatures: layering
    csi.storage.k8s.io/provisioner-secret-name: rook-csi-rbd-provisioner
    csi.storage.k8s.io/provisioner-secret-namespace: {{ rook_k8s_namespace }}
    csi.storage.k8s.io/controller-expand-secret-name: rook-csi-rbd-provisioner
    csi.storage.k8s.io/controller-expand-secret-namespace: {{ rook_k8s_namespace }}
    csi.storage.k8s.io/node-stage-secret-name: rook-csi-rbd-node
    csi.storage.k8s.io/node-stage-secret-namespace: {{ rook_k8s_namespace }}
    csi.storage.k8s.io/fstype: {{ rook_rbd_storage_class_fstype }}
allowVolumeExpansion: true
reclaimPolicy: Delete
