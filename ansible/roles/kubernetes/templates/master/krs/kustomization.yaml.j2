apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
namespace: {{ kubernetes_krs_namespace }}
resources:
- operator.yaml
- role_binding.yaml
- role.yaml
- service_account.yaml
patches:
  - patch: |-
      apiVersion: apps/v1
      kind: Deployment
      metadata:
        name: kubelet-rubber-stamp
        namespace: kube-system
      spec:
        template:
          spec:
            containers:
            - name: kubelet-rubber-stamp
              image: quay.io/kontena/kubelet-rubber-stamp-amd64:{{ kubernetes_krs_repo_tag | replace('v','') }}
              imagePullPolicy: IfNotPresent
            nodeSelector:
